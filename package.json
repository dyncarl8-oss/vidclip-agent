{
  "name": "pocat.io",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "license": "UNLICENSED",
  "scripts": {
    "start": "node build/bin/server.js",
    "build": "pnpm run build:frontend && pnpm run build:api",
    "build:api": "node ace build",
    "build:frontend": "pnpm --filter pocat-frontend run build",
    "dev:api": "node ace serve --hmr",
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm --filter pocat-frontend run dev\" --names \"API,FRONTEND\" --prefix-colors \"blue,magenta\"",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "ace": "node ace",
    "render-postbuild": "npx puppeteer browsers install chrome"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.11.24",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node-maintained": "^10.9.5",
    "typescript": "~5.8"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.0",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/drive": "^3.4.1",
    "@adonisjs/lucid": "^21.6.1",
    "@adonisjs/static": "^1.1.1",
    "@distube/ytdl-core": "^4.16.12",
    "@libsql/client": "^0.15.15",
    "libsql": "^0.3.16",
    "@libsql/sqlite3": "^0.3.1",
    "@types/multer": "^2.0.0",
    "@types/puppeteer": "^7.0.4",
    "@vinejs/vine": "^3.0.1",
    "better-sqlite3": "^12.5.0",
    "fluent-ffmpeg": "^2.1.3",
    "luxon": "^3.7.2",
    "multer": "^2.0.2",
    "node-youtube-dl": "^0.0.2",
    "puppeteer": "^24.33.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}